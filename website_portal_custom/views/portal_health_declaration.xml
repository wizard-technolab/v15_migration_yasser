<odoo>
    <template id="portal_my_home_menu_health_declaration" name="Portal layout : health declaration menu entries" inherit_id="portal.portal_breadcrumbs" priority="40">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'health_declarations'" t-attf-class="breadcrumb-item #{'active ' if not health_declarations else ''}">
                <a t-if="health_declaration" t-attf-href="/my/health_declaration?{{ keep_query() }}">Health Declarations</a>
                <t t-else="">Health Declarations</t>
            </li>
            
            <li t-if="page_name == 'health_declaration'" t-attf-class="breadcrumb-item #{'active ' if not health_declaration else ''}">
                <a t-if="health_declaration" t-attf-href="/my/health_declaration?{{ keep_query() }}">Health Declarations</a>
                <t t-else="">Health Declarations</t>
            </li>
            <li t-if="health_declaration" class="breadcrumb-item active">
                <t t-esc="health_declaration.name" t-if="health_declaration.name != '/'"/>
                <t t-else=""><t t-esc="health_declaration.name"/></t>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_health_declaration" name="Show Health Declarations" inherit_id="portal.portal_my_home" customize_show="True" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Health Declarations</t>
                <t t-set="url" t-value="'/my/health_declaration'"/>
                <t t-set="placeholder_count" t-value="'expression_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_health_declarations" name="My Health Declarations">
      <t t-call="portal.portal_layout">
        <t t-set="breadcrumbs_searchbar" t-value="True"/>

        <t t-call="portal.portal_searchbar">
            <t t-set="title">Health Declarations</t>
        </t>
        <t t-if="not health_declarations">
            <p>There are currently no health declarations for your account.</p>
        </t>
        <t t-if="health_declarations" t-call="portal.portal_table">
            <thead>
                <tr class="active">
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Loan Amount</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="health_declarations" t-as="health_declaration">
                    <tr>
                        <td>
                            <a t-att-href="health_declaration.get_portal_url()" t-att-title="health_declaration.name">
                                <span t-field="health_declaration.name"/>
                            </a>
                        </td>
                        <td><span t-field="health_declaration.phone"/></td>
                        <td><span t-field="health_declaration.loan_amount"/></td>
                    </tr>
                </t>
            </tbody>
        </t>
      </t>
    </template>

