<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="expression_of_desire_list">
      <field name="name">expression.of.desire list</field>
      <field name="model">expression.of.desire</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="id_number"/>
          <field name="phone_number"/>
          <field name="loan_type"/>
          <field name="service_provider"/>
          <field name="service_amount"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="expression_of_desire_action_window">
      <field name="name">Expression Of Desire</field>
      <field name="res_model">expression.of.desire</field>
      <field name="view_mode">tree,form</field>
    </record>


