<odoo>
    <template id="portal_my_home_menu_expression" name="Portal layout : expression menu entries" inherit_id="portal.portal_breadcrumbs" priority="40">
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li t-if="page_name == 'expressions'" t-attf-class="breadcrumb-item #{'active ' if not expressions else ''}">
                <a t-if="expression" t-attf-href="/my/expression_of_desire?{{ keep_query() }}">Expression of Desire</a>
                <t t-else="">Expression of Desire</t>
            </li>
            <li t-if="page_name == 'expression'" t-attf-class="breadcrumb-item #{'active ' if not expression else ''}">
                <a t-if="expression" t-attf-href="/my/expression_of_desire?{{ keep_query() }}">Expression of Desire</a>
                <t t-else="">Expression of Desire</t>
            </li>
            <li t-if="expression" class="breadcrumb-item active">
                <t t-esc="expression.name" t-if="expression.name != '/'"/>
                <t t-else=""><t t-esc="expression.name"/></t>
            </li>
        </xpath>
    </template>

    <template id="portal_my_home_expression" name="Show Expression of Desire" inherit_id="portal.portal_my_home" customize_show="True" priority="40">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-call="portal.portal_docs_entry">
                <t t-set="title">Expressino of Desires</t>
                <t t-set="url" t-value="'/my/expression_of_desire'"/>
                <t t-set="placeholder_count" t-value="'expression_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_expressions" name="My Expression of desire">
      <t t-call="portal.portal_layout">
        <t t-set="breadcrumbs_searchbar" t-value="True"/>

        <t t-call="portal.portal_searchbar">
            <t t-set="title">Expression of desire</t>
        </t>
        <t t-if="not expressions">
            <p>There are currently no Expression of desire for your account.</p>
        </t>
        <t t-if="expressions" t-call="portal.portal_table">
            <thead>
                <tr class="active">
                    <th>Name</th>
                    <th>Phone Number</th>
                    <th>Id Number</th>
                    <th>Loan Type</th>
                    <th>Service Provider</th>
                    <th>Service Amount</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="expressions" t-as="expression">
                    <tr>
                        <td>
                            <a t-att-href="expression.get_portal_url()" t-att-title="expression.name">
                                <t t-esc="expression.name"/>
                            </a>
                        </td>
                        <td><span t-field="expression.phone_number"/></td>
                        <td><span t-field="expression.id_number"/></td>
                        <td><span t-field="expression.loan_type"/></td>
                        <td><span t-field="expression.service_provider"/></td>
                        <td><span t-field="expression.service_amount"/></td>
                    </tr>
                </t>
            </tbody>
        </t>
      </t>
    </template>

