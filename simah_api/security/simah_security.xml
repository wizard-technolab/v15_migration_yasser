<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_category_simah">
            <field name="name">Simah Management</field>
            <field name="description">Category For Simah</field>
            <field name="sequence">30</field>
        </record>
        <record id="group_use_simah_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_simah"/>
        </record>
        <record id="group_use_simah_admin" model="res.groups">
            <field name="name">Administrator</field>
            <field name="category_id" ref="module_category_simah"/>
            <field name="implied_ids" eval="[(4, ref('group_use_simah_user'))]"/>
        </record>
        <record id="group_use_simah_super_admin" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_simah"/>
        </record>
    </data>
</odoo>
