        <!-- Form View -->
        <record id="collection_form_view" model="ir.ui.view">
            <field name="name">collection.collection.form</field>
            <field name="model">collection.collection</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="0"/>
                            </group>
                            <group>
                                <field name="loan_bkt" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="collection_tree_view" model="ir.ui.view">
            <field name="name">collection.collection.tree</field>
            <field name="model">collection.collection</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Active Loans" editable="bottom" multi_edit="1">
                    <field name="name"/>
                    <field name="loan_state"/>

                </tree>
            </field>
        </record>

        <record id="loan_order_collector_search_view" model="ir.ui.view">
            <field name="name">loan.order.tree.collector</field>
            <field name="model">loan.order</field>
            <field name="inherit_id" ref="loan.request_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='name']" position="after">
                    <field name="phone_customer" groups="collection.group_collection_agent"/>
                    <field name="late_amount" groups="collection.group_collection_agent"/>
                    <field name="bkt" groups="collection.group_collection_agent"/>
                    <field name="remaining_amount" sum="remaining_amount" groups="collection.group_collection_agent"/>
                    <field name="last_paid_installment_date" groups="collection.group_collection_agent"/>
                    <field name="paid_amount" sum="paid_amount" groups="collection.group_collection_agent"/>
                    <field name="collector_user_id" groups="collection.group_collection_agent"/>
                    <field name="latest_payment_date" groups="collection.group_collection_agent"/>
                </xpath>
            </field>
        </record>

        <record id="action_loan_order_by_card" model="ir.actions.act_window">
            <field name="name">Active Loans</field>
            <field name="res_model">loan.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','=','active')]</field>
        </record>

