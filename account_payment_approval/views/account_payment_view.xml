<odoo>
    <data>
        <record id="view_account_payment_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header//button[@name='action_post']" position="after">
                    <button name="transfer_accounting_manager" string="Send" type="object"
                            class="oe_highlight"
                            states="draft"/>
                    <button name="transfer_approved" string="Approve" type="object"
                            class="oe_highlight"
                            states="accounting_manager"
                            groups="account_payment_approval.payment_vp_approval"/>
                    <button name="reject_transfer" string="Reject" type="object"
                            class="oe_highlight"
                            states="accounting_manager"/>
                </xpath>
                <xpath expr="//header//button[@name='action_post']" position="attributes">
                    <attribute name="states">approved</attribute>
                    <attribute name="groups">account.group_account_manager</attribute>
<!--                    <attribute name="attrs">{'invisible': [('payment_type', '=', 'outbound')]}-->
<!--                    </attribute>-->
                </xpath>
                <xpath expr="//header//button[@name='action_cancel']" position="attributes">
                    <attribute name="attrs">{'invisible': [('state', 'not in', ('rejected', 'posted'))]}
                    </attribute>
                </xpath>
            </field>
        </record>


    </data>
    <template id="report_payment_receipt_document_inhh" inherit_id="account.report_payment_receipt_document">
        <xpath expr="." position="replace">
            <t t-call="web.external_layout">
                <t t-set="o" t-value="o.with_context(lang=lang)"/>
                <div class="page">
                    <h3>
                        <strong>Receipt Voucher
                            <span t-field="o.name"/>
                        </strong>
                    </h3>
                    <div class="mb-4 mt-3">
                        <div class="row">
                            <div class="col-8">
                                Payment Date:
                                <span t-field="o.date"/>
                                <br></br>
                                Reference Number:
                                <span t-field="o.ref"/>
                                <br></br>
                                <t t-if="o.partner_type == 'customer'">
                                    Received From:
                                </t>
                                <t t-if="o.partner_type == 'supplier'">
                                    Vendor:
                                </t>
                                <span t-field="o.partner_id"/>
                                <br></br>
                                Payment Mode:
                                <span t-field="o.payment_method_id.name"/>
                            </div>
                            <div class="col-4" style="background-color:#9E9E9E;">
                                <span style="color:white">Payment Amount</span>
                                <br></br>
                                <h1>
                                    <span t-field="o.amount" style="color:white"
                                          t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                </h1>
                            </div>
                        </div>
