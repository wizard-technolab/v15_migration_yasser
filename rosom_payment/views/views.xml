                <xpath expr="//field[@name='branch']" position="after">
                    <field name="rosom_bill_id" readonly="1"/>
                    <field name="rosom_number"/>
                    <field name="invoice"/>
<!--                    <field name="rosom_bill_error"/>-->
                </xpath>
            </field>
        </record>
