        <record id="rosom_bill_view_search" model="ir.ui.view">
            <field name="name">rosom.bill.search</field>
            <field name="model">rosom.bill</field>
            <field name="arch" type="xml">
                <search>
                    <field name="loan_id"/>
                    <field name="CreateDate"/>
                    <field name="ExpiryDate"/>
                    <field name="AmountDue"/>
                    <field name="MinPartialAmount"/>
                    <field name="SADADNumber"/>
                </search>
            </field>
        </record>
        <record id="rosom_bill_view_tree" model="ir.ui.view">
            <field name="name">rosom.bill.tree</field>
            <field name="model">rosom.bill</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="loan_id"/>
                    <field name="InvoiceId"/>
                    <field name="CreateDate"/>
                    <field name="ExpiryDate"/>
                    <field name="AmountDue"/>
                    <field name="MinPartialAmount"/>
                    <field name="SADADNumber"/>
                </tree>
            </field>
        </record>
        <record id="rosom_bill_view_form" model="ir.ui.view">
            <field name="name">rosom.bill.form</field>
            <field name="model">rosom.bill</field>
            <field name="arch" type="xml">
                <form edit="false" >
                    <sheet>
                        <div class="oe_title">
                            <label class="oe_edit_only" for="loan_ref"/>
                            <h1>
                                <field name="loan_ref"/>
                            </h1>
                        </div>
                        <group>
                            <group string="General">
                                <field name="loan_id"/>
                                <field name="AmountDue"/>
                                <field name="MinPartialAmount"/>
                                <field name="CreateDate"/>
                                <field name="ExpiryDate"/>
                                <field name="InvoiceStatus"/>
                                <field name="DisplayInfo"/>
                            </group>
                            <group string="Result">
                                <field name="InvoiceId"/>
                                <field name="SADADNumber"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Payments">
                                <field name="payment_ids" readonly="1"/>
                            </page>
                            <page string="API Logs">
                                <field name="log_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="rosom_bill_action_view_tree" model="ir.actions.act_window">
            <field name="name">Rosom Bills</field>
            <field name="res_model">rosom.bill</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Rosom Bill found. Let's create one!
                </p>
                <p>
                    Helps improving the business workflow.
                </p>
            </field>
        </record>

        <menuitem name="Rosom API" id="root_menu" sequence="900" groups="base.group_system" web_icon="rosom_payment,static/description/icon.png"/>
        <menuitem name="Rosom Bills" action="rosom_bill_action_view_tree" id="rosom_bill_menu" parent="root_menu"
                  sequence="10"/>
    </data>
</odoo>
