                                                                <label for="address">Address</label>
                                                                <input type="text" class="form-control required name_v" id="address" name="address" placeholder="Address" />
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="loan_amount">Loan Amount</label>
                                                                <input type="text" class="form-control required amount_v" id="loan_amount" name="loan_amount" placeholder="Loan Amount" />
                                                            </div>
