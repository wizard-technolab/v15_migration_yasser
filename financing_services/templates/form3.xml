                                                                <label for="birth_date">Date of Birth</label>
                                                                <input type="date" required="" class="form-control required" id="birth_date" name="birth_date" />
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="birth_place">Place of Birth</label>
                                                                <input type="text" class="form-control required name_v" id="birth_place" name="birth_place" placeholder="Place of Birth" />
                                                            </div>
