<odoo>
    <record id="calculate" model="website.menu">
        <field name="name">Calculate</field>
        <field name="url">/calculation</field>
        <field name="parent_id" ref="website.main_menu"/>
        <!--        <field name="website_published">True</field>-->
    </record>
    <template id="menu_data" name="Loan calculator">
        <t t-call="website.layout">
            <link rel="stylesheet" href="/website_menu/static/src/css/style2.css" type="text/css"/>
            <section class="form-main col-lg-12">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="form">
                                    <div class="left-side col-12">
                                        <div class="left-heading text-center">
                                            <h3>الحاسبة</h3>
                                            <br/>
                                            <h5>تساعدك فيول للتمويل على التخطيط المالي وفقاً لاحتياجاتك الحالية
                                                والمستقبلية من خلال تحديد قيمة التمويل بكل سهولة عن طريق حاسبة التمويل
                                                المطورة خصيصاً لحساب التمويل الشخصي
                                            </h5>
                                        </div>
                                    </div>
                                    <div class="right-side col-12">
                                        <form id="calculation-form" role="form" action="/calculate-result" method="POST"
                                              novalidate="novalidate">
                                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                            <div class="main active">
                                                <div class="co-12 fields-group">
                                                    <div class="row">
                                                        <div class="col-md-6 col-12 fields-group">
                                                            <div class="col-12 group-container">
                                                                <div class="form-group">
                                                                    <label for="amount" class="control-label">مبلغ
                                                                        التمويل:
                                                                    </label>
                                                                    <input type="text"
                                                                           class="form-control"
                                                                           t-att-value="loan_amount"
                                                                           id="loan_amount" name="loan_amount"
                                                                           placeholder="مبلغ التمويل"
                                                                           required="required"/>
                                                                </div>
                                                                <!--                                                                <div class="form-group">-->
                                                                <!--                                                                    <label for="liability" class="control-label">-->
                                                                <!--                                                                        Liability:-->
                                                                <!--                                                                    </label>-->
                                                                <!--                                                                    <input type="text"-->
                                                                <!--                                                                           class="form-control"-->
                                                                <!--                                                                           t-att-value="liability"-->
                                                                <!--                                                                           id="liability" name="liability"-->
                                                                <!--                                                                           placeholder="Liability"-->
                                                                <!--                                                                           required="required"/>-->
                                                                <!--                                                                </div>-->
                                                                <!--                                                                <div class="form-group">-->
                                                                <!--                                                                    <label for="term_y" class="control-label">Loan Term-->
                                                                <!--                                                                        <span class="text-danger">* (Year) :</span>-->
                                                                <!--                                                                    </label>-->
                                                                <!--                                                                    <input type="text"-->
                                                                <!--                                                                           class="form-control"-->
                                                                <!--                                                                           t-att-value="term_year"-->
                                                                <!--                                                                           id="term_year" name="term_year"-->
                                                                <!--                                                                           placeholder="years"-->
                                                                <!--                                                                           required="required"/>-->
                                                                <!--                                                                </div>-->
                                                                <div class="form-group">
                                                                    <label for="term_month">المدة
                                                                        <span class="text-danger">* (بالشهور)</span>
                                                                    </label>
                                                                    <input type="text" class="form-control phone_input"
                                                                           id="term_month" name="term_month"
                                                                           placeholder="الشهور" required="required"/>
                                                                </div>
                                                                <!--                                                                <div class="form-group">-->
                                                                <!--                                                                    <label for="interest_rate" class="control-label">-->
                                                                <!--                                                                        Interest rate (per year):-->
                                                                <!--                                                                    </label>-->
                                                                <!--                                                                    <input type="text" class="form-control"-->
                                                                <!--                                                                           t-att-value="interest"-->
                                                                <!--                                                                           id="interest" name="interest"-->
                                                                <!--                                                                           placeholder="interest rate"-->
                                                                <!--                                                                           required="required"/>-->
                                                                <!--                                                                </div>-->
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-group col-md-12">
                                                    <button type="submit" class="btn btn-primary pull-center calculate">
                                                        أحسب
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </t>
    </template>
    <record id="calculate-result" model="website.page">
        <field name="name">Loan</field>
        <field name="type">qweb</field>
        <field name="url">/calculate-result</field>
        <!--        <field name="loan_amount" ref="website.main_menu"/>-->
