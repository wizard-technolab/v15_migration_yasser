    </record>
    <template id="result_data" name="Loan calculator">
        <t t-call="website.layout">
            <link rel="stylesheet" href="/website_menu/static/src/css/style2.css" type="text/css"/>
            <section class="form-main col-lg-12">
                <div class="container">
                    <t t-foreach="range(1)" t-as="p">
                        <t t-foreach="docs" t-as="o">
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="form text-center">
                                            <div class="left-side col-12">
                                                <div class="left-heading text-center">
                                                    <h3>الحاسبة</h3>
                                                </div>
                                            </div>
                                            <div class="col-md-12 p-0">
                                                <label>الإجمالي</label>
                                            </div>
                                            <div class="text-center">
                                                <label>القسط الشهري :</label>
                                                <strong t-esc="o.monthly_payments"/>
                                                <![CDATA[&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;]]>
                                                <label>مدة التمويل بالاشهر :</label>
                                                <strong t-esc="o.term_month"/>
                                                <![CDATA[&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;]]>
                                            </div>
                                            <br/>
                                            <br/>
                                            <div class="text-center">
                                                <label>مبلغ التمويل :</label>
                                                <strong t-esc="o.loan_amount"/>
                                                <![CDATA[&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;]]>
                                                <!--                                                <label>Monthly Payment Period :</label>-->
                                                <!--                                                <strong t-esc="o.term_month"/>-->
                                            </div>
                                            <div class="text-center">
                                                <label>معدل الربح السنوي :</label>
                                                <strong>0.24%</strong>
                                                <![CDATA[&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;]]>
                                                <!--                                                <label>Monthly Payment Period :</label>-->
                                                <!--                                                <strong t-esc="o.term_month"/>-->
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                    <t t-foreach="range(1)" t-as="p">
                        <t t-foreach="docs" t-as="o">
                            <div class="row justify-content-center">
                                <div class="col-md-8">
                                    <div class="card">
                                        <div class="form text-center">
                                            <div class="left-side col-12">
                                                <div class="left-heading text-center">
                                                    <!--                                <h3>الحاسبة</h3>-->
                                                    <br/>
                                                    <h5>ملاحظة: حاسبة التمويل تساعدك فقط على حساب النتيجة التقريبة لقيمة
                                                        التمويل
                                                        والدفعات
                                                        الشهرية، وسيتم حساب معدل النسبة السنوي بعد تقديم الطلب والدراسة
                                                        الإئتمانية
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </t>
                </div>
            </section>
        </t>
    </template>
</odoo>


