<odoo>
    <data>
        <record id="elm_yakeen_log_view_search" model="ir.ui.view">
            <field name="name">elm.yakeen.log.search</field>
            <field name="model">elm.yakeen.log</field>
            <field name="arch" type="xml">
                <search>
                    <field name="partner_id" string="Partner"/>
                </search>
            </field>
        </record>

        <record id="elm_yakeen_log_view_tree" model="ir.ui.view">
            <field name="name">elm.yakeen.log.tree</field>
            <field name="model">elm.yakeen.log</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="create_date"/>
                    <field name="create_uid"/>
                    <field name="partner_id"/>
                    <field name="api_method"/>
                </tree>
            </field>
        </record>

        <record id="elm_yakeen_log_view_form" model="ir.ui.view">
            <field name="name">elm.yakeen.log.form</field>
            <field name="model">elm.yakeen.log</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="create_date"/>
                                <field name="create_uid"/>
                            </group>
                            <group>
                                <field name="partner_id"/>
                                <field name="api_method"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Request &amp; Response">
                                <group>
                                    <separator string="Request"/>
                                    <field name="request" nolabel="1"/>
                                    <separator string="Response"/>
                                    <field name="response" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="elm_yakeen_log_action_view_tree" model="ir.actions.act_window">
            <field name="name">Elm Yakeen Api Log</field>
            <field name="res_model">elm.yakeen.log</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Logs found. Let's create one!
                </p>
                <p>
                    Helps improving the business workflow.
                </p>
            </field>
        </record>
        <menuitem name="Elm Yakeen Api Log" action="elm_yakeen_log_action_view_tree" id="elm_yakeen_log_menu"
                  sequence="9999" web_icon="elm_yakeen,static/description/icon.png"/>
    </data>
</odoo>