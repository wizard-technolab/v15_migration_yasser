<odoo>
    <data>
        <record id="view_loan_note_wizard_form" model="ir.ui.view">
            <field name="name">loan.note.wizard.form</field>
            <field name="model">loan.note.wizard</field>
            <field name="arch" type="xml">
                <form string="Add Note">
                    <sheet>
                        <field name="confirmed" invisible="1"/>
                        <div class="oe_title">
                            <label for="note"/>
                            <h1>
                                <field name="note"/>
                            </h1>
                        </div>
                        <footer>
                            <button string="Confirm" type="object" name="confirm_note_action" class="btn-primary"
                                    attrs="{'invisible': [('confirmed', '=', True)]}"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"
                                    attrs="{'invisible': [('confirmed', '=', True)]}"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>