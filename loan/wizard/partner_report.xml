<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="credit_report_view" model="ir.ui.view">
        <field name="name">credit.report.form</field>
        <field name="model">credit.report</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <!--                        <field name="user_id" widget="many2many_tags"/>-->
                        <field name="user_id"/>
                        <field name="loan_request_to"/>

                    </group>
                    <group>
                        <!--                        <field name="loan_request_id"/>-->
                        <field name="loan_request_from"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="note"/>
                    </group>
                </group>
                <footer>
                    <button string="Print" name="action_partner_print" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_partner_report" model="ir.actions.act_window">
        <field name="name">Credit report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">credit.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>