<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="helpdesk_ticket_form" model="ir.ui.view">
            <field name="name">helpdesk.ticket.form</field>
            <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
            <field name="model">helpdesk.ticket</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='team_id']" position="before">
                    <field name="sequence"/>
                    <field name="sequence_num"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="ticket_link" invisible="1"/>
                </xpath>
                <xpath expr="//button[@name='assign_ticket_to_self']" position="after">
                    <button name="action_solve_inq" string="Solve" type="object"/>
                </xpath>
                <xpath expr="//button[@name='action_solve_inq']" position="after">
                    <button name="action_close_inq" string="Close" type="object"/>
                </xpath>
            </field>
        </record>
