<odoo>
    <data>
        <record id="simah_city_view" model="ir.ui.view">
            <field name="name">simah.city.form</field>
            <field name="model">simah.city.api</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="english_name" readonly="1"/>
                            </group>
                            <group>
                                <field name="city_id" readonly="1"/>
                                <field name="code" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="simah_city_tree" model="ir.ui.view">
            <field name="name">simah.city.tree</field>
            <field name="model">simah.city.api</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="english_name"/>
                    <field name="city_id"/>
                    <field name="code"/>
                </tree>
            </field>
        </record>

        <record id="simah_city_api_action" model="ir.actions.act_window">
            <field name="name">Cities</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">simah.city.api</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                </p>
            </field>
        </record>

        <menuitem name="Cities"
                  id="simah_city_menu"
                  parent="loan_id"
                  action="loan.simah_city_api_action"
                  sequence="13"/>

    </data>
</odoo>
