<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="virtual_account_tree_view" model="ir.ui.view">
            <field name="name">virtual.account.tree.inherit</field>
            <field name="model">virtual.account.line</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
<!--                    <field name="Customer_name"/>-->
                    <field name="is_select"/>
                </tree>
            </field>
        </record>

        <record id="virtual_account_form_view_inherit" model="ir.ui.view">
            <field name="name">virtual.account.form.inherit</field>
            <field name="model">virtual.account.line</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                 <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
<!--                                <field name="Customer_name"/>-->
<!--                                <field name="customer"/>-->
                            </group>
                            <group>
                                <field name="is_select"/>
                                <field name="iban_num" default="SA"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="virtual_account_action" model="ir.actions.act_window">
            <field name="name">virtual account line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">virtual.account.line</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                </p>
            </field>
        </record>

        <menuitem name="Configuration"
                  id="configuration_id"
                  parent="loan_root"
                  sequence="9"
        />

        <menuitem name="V Account"
                  id="virtual_id"
                  parent="loan_id"
                  action="loan.virtual_account_action"
                  groups="loan.group_accounting_move"
                  sequence="9"/>

    </data>
</odoo>